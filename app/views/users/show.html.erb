<div class='container flex width'>
  <% @user.each do |user| %>
    <%= render partial: 'shared/user_card', locals: { user: user }%>
    <div class='user-bio flex card-width'>
      <h2>Bio</h2>
      <p>
        <%= user.Bio %>
      </p>
    </div>
  <% end %>
  <div class='recent-posts flex width'>
    <% @posts.each do |post| %>
      <%= render partial: 'shared/post_card', locals: { post: post }%>
    <% end %>
  </div>
  <div class='btn-wrapper flex card-width see-all-posts'>
    <%= link_to "/users/#{@user[0].id}/posts" do %>
      <button type='button' name='create_post' class ='btn'>
        See all posts
      </button>
    <% end %>
    <%= link_to "/users/#{@user[0].id}/posts_data" do %>
      <button type='button' name='create_post' class ='btn'>
        Render json
      </button>
    <% end %>
  </div>
</div>