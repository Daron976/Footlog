<div class='user-card width flex'>
  <img
    src= <%= user.Image %>
    alt='image of the user'
  >
  </img>
  <div class='user-content border flex'>
    <h2 class='decription'>
      <%= link_to "/users/#{user.id}" do %>
        <%= user.Name %>
      <% end %>
    </h2>
    <p class='post-counter'>
      Number of posts: <%= user.PostCounter %>
    </p>
  </div>
</div>