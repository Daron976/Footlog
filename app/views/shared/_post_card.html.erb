<div class='post-card border flex width'>
  <h3 class='post-header'>
    <%= link_to "/users/#{post.AuthorId}/posts/#{post.id}" do %>
      <%= post.Title %>
    <% end %>
  </h3>
  <p class='post-desc'>
    <%= post.Text[0..250] %>
  </p>
  <p class='post-counter-data'>
    Comments: <%= post.CommentCounter %>, Likes: <%= post.LikeCounter %>
  </p>
  <div class='btn-anchor flex'>
    <%= link_to "/users/#{post.id}/new_comment" do %>
      <button type='button' name='create_comment' class'button'>
        comment
      </button>
    <% end %>
  </div>
</div>